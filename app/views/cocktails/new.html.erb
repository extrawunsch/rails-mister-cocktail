
<div class='container m-5'>
 <h1>Add your own cocktail</h1>
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <%= simple_form_for (@cocktail) do |f| %>
        <%= f.input :image_url %>
        <%= f.input :photo, as: :file %>
